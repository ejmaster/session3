import java.awt.Container;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;


public class ButtonGame implements ActionListener{

	Random numberGenerator = new Random();
	int setNumber, correct, incorrect;
	JLabel statusLabel;
	JButton button1, button2, button3, button4;
	
	public static void main(String[] args) {
		
		new ButtonGame();
		
		//add buttons

		
	
	}



	@Override
	public void actionPerformed(ActionEvent e) {
		if(((JButton) e.getSource()).getText().equals("Button" + setNumber)){
			correct += 1;
		}
		else{
			incorrect +=1;
		}
		
		//Update Label
		statusLabel.setText("Correct: " + correct + "/Incorrect: " + incorrect);
		
		//Update Random Number
		setNumber = numberGenerator.nextInt(5);
	}
	
	public ButtonGame(){
		
		JFrame buttonsPanel = new JFrame();
		buttonsPanel.setLayout(new GridLayout(2,2));
		
		buttonsPanel.setSize(400,300);
		buttonsPanel.setVisible(true);
		buttonsPanel.setName("My window");
		
		buttonsPanel.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		Container arrangement = buttonsPanel.getContentPane();
		arrangement.setLayout(new GridLayout(2,2));
		
		//add button 1
		button1 = new JButton("Button 1");
		button1.addActionListener(this);
		
		buttonsPanel.add(button1);
	
		button2 = new JButton("Button 2");
		button2.addActionListener(this);
		
		buttonsPanel.add(button2);
		
		button3 = new JButton("Button 3");
		button3.addActionListener(this);
		
		buttonsPanel.add(button3);
		
		button4 = new JButton("Button 4");
		button4.addActionListener(this);
		
		buttonsPanel.add(button4);
		
	
	}
	}	